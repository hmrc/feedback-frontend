{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [{
    "name": "Chrome: Attach",
    "port": 9222,
    "request": "attach",
    "type": "pwa-chrome",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Chrome: Launch",
    "request": "launch",
    "type": "pwa-chrome",
    "url": "http://localhost:8080",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Microsoft Edge: Attach",
    "port": 9222,
    "request": "attach",
    "type": "pwa-msedge",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Microsoft Edge: Launch",
    "request": "launch",
    "type": "pwa-msedge",
    "url": "http://localhost:8080",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Microsoft Edge: Attach and open the Edge DevTools",
    "request": "attach",
    "type": "vscode-edge-devtools.debug",
    "url": "http://localhost:8080",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Microsoft Edge: Launch and open the Edge DevTools",
    "request": "launch",
    "type": "vscode-edge-devtools.debug",
    "url": "http://localhost:8080",
    "webRoot": "${workspaceFolder}"
  }, {
    "file": "${workspaceFolder}/index.html",
    "name": "Mozilla Firefox: Launch index.html",
    "reAttach": true,
    "request": "launch",
    "type": "firefox"
  }, {
    "name": "Mozilla Firefox: Launch localhost",
    "reAttach": true,
    "request": "launch",
    "type": "firefox",
    "url": "http://localhost/index.html",
    "webRoot": "${workspaceFolder}"
  }, {
    "name": "Node.js: Attach",
    "port": 9229,
    "request": "attach",
    "skipFiles": ["<node_internals>/**"],
    "type": "pwa-node"
  }, {
    "name": "Node.js: Launch Program",
    "program": "${file}",
    "request": "launch",
    "skipFiles": ["<node_internals>/**"],
    "type": "pwa-node"
  }, {
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "name": "Node.js: nodemon",
    "program": "${workspaceFolder}/app.js",
    "request": "launch",
    "restart": true,
    "runtimeExecutable": "nodemon",
    "skipFiles": ["<node_internals>/**"],
    "type": "pwa-node"
  }],
  "version": "0.2.0"
}
